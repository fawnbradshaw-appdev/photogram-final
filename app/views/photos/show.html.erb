<div>
  <div>
    <h1>
      Photo Details
    </h1>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>


    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>
      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Fans
      </dt>
      
      <dd>
        <% @the_photo.fans.each do |a_fan| %>
        <%= a_fan.username %>,
        <% end %>
      </dd>
      

      <dt>
        Add a fan
      </dt>
      <dd>
        <form action="/insert_like" method="post">
          <input type="hidden" value="<%= @current_user.id %>" name="query_fan_id">
          <input type="hidden" value="<%= @the_photo.id %>" name="query_photo_id">
          <button>Like</button>
        </form>
      </dd>

      <% if session.fetch(:user_id) == @the_photo.owner_id %>
        <dt>Edit photo</dt>
        <dd>

            <form action="/modify_photo/<%= @the_photo.id %>" method="post" enctype="multipart/form-data">
            <label for="browser_image">Image URL</label>
            <input id="browser_image" type="file" name="query_image" placeholder="Enter a URL for the image..." value="https://robohash.org/<%= @the_photo.id %>">
          
            <label for="browser_caption">Caption</label>
            <textarea id="browser_caption" name="query_caption" placeholder="<%= @the_photo.caption %>"></textarea>

            <input id="browser_photo_owner_id" type="hidden" value="<%= @the_photo.owner_id %>" name="query_owner_id">
          
            <button>Update photo</button>
          </form>
        </dd>
      <% end %>

      <dt>Delete photo</dt>
      <dd>
        <a href="/delete_photo/<%= @the_photo.id %>">
          Delete this photo
        </a>
      </dd>
    </dl>
  </div>
</div>

<hr>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%= a_comment.commenter.username %>
      </td>

      <td>
        <%= a_comment.body %>
      </td>

      <td>
        <%= time_ago_in_words(a_comment.created_at) %> ago
      </td>
    </tr> 
  <% end %> 
  </table>

<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" value="<%= @the_photo.caption %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_photo.owner_id %>">
      </div>

      
      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>
